# LocalPulse Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# MAPPING & GEOLOCATION APIs
# =============================================================================

# Mapbox API (for 3D maps and visualizations)
# Get from: https://www.mapbox.com/ -> Account -> Access Tokens
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Google Maps API (for geocoding and location services)
# Get from: https://console.cloud.google.com/ -> APIs & Services -> Credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# WEATHER APIs
# =============================================================================

# OpenWeatherMap API (for real-time weather data)
# Get from: https://openweathermap.org/api -> Sign up -> API keys
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# AI & MACHINE LEARNING APIs
# =============================================================================

# Google Gemini API (for AI chat and analysis)
# Get from: https://aistudio.google.com/ -> Get API Key
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (alternative AI service)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (for NLP models)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# SOCIAL MEDIA & CONTENT APIs
# =============================================================================

# Reddit API (for community discussions)
# Get from: https://www.reddit.com/prefs/apps (create "script" app)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=LocalPulse/1.0

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# PostgreSQL Database (for production data storage)
DATABASE_URL=postgresql://username:password@localhost:5432/localpulse_db

# MongoDB (alternative NoSQL database)
MONGODB_URI=mongodb://localhost:27017/localpulse

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=localpulse-storage

# =============================================================================
# GOVERNMENT & PUBLIC DATA APIs
# =============================================================================

# Miami-Dade County Open Data API (covers Coral Gables area)
# Most endpoints are open, but some may require registration
MIAMI_DADE_API_KEY=your_miami_dade_api_key_here

# Florida Department of Transportation API
# FDOT uses ArcGIS services - mostly open access
# For advanced features: https://developers.arcgis.com/
FDOT_ARCGIS_TOKEN=your_arcgis_token_here

# U.S. Census Bureau API
# Get from: https://www.census.gov/developers/
CENSUS_API_KEY=your_census_api_key_here

# =============================================================================
# REAL ESTATE & ECONOMIC DATA
# =============================================================================

# Zillow API (for real estate data)
# Note: Zillow discontinued public API, consider alternatives like RentSpree
ZILLOW_API_KEY=your_zillow_api_key_here

# =============================================================================
# COMMUNICATION & NOTIFICATIONS
# =============================================================================

# SendGrid (for email notifications)
# Get from: https://sendgrid.com/ -> Settings -> API Keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@localpulse.com

# Twilio (for SMS notifications)
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Slack (for team notifications)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# VIDEO STREAMING & CAMERAS
# =============================================================================

# Live camera stream URLs (from your internal API)
MAIN_CAMERA_STREAM_URL=your_internal_camera_api_url_here
BACKUP_CAMERA_STREAM_URL=your_backup_camera_api_url_here

# Traffic camera API (if using external traffic cameras)
TRAFFIC_CAMERA_API_KEY=your_traffic_camera_api_key_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Secret (for user authentication)
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# Session secret (for Streamlit sessions)
SESSION_SECRET=your-session-secret-here

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Application URL
APP_URL=http://localhost:8501

# Data refresh intervals (in minutes)
CRIME_DATA_REFRESH_INTERVAL=60
TRAFFIC_DATA_REFRESH_INTERVAL=30
SOCIAL_MEDIA_REFRESH_INTERVAL=15

# Alert thresholds
DEFAULT_CRIME_ALERT_THRESHOLD=5
DEFAULT_TRAFFIC_ALERT_THRESHOLD=10
DEFAULT_VEHICLE_ALERT_THRESHOLD=20

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# Sentry (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Stripe (for payments/subscriptions if needed)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# GitHub (for version control integration)
GITHUB_TOKEN=your_github_token_here

# =============================================================================
# LOCATION-SPECIFIC SETTINGS
# =============================================================================

# Default coordinates for Coral Gables, FL
DEFAULT_LATITUDE=25.721
DEFAULT_LONGITUDE=-80.268
DEFAULT_ZOOM_LEVEL=13

# Geofencing boundaries for Coral Gables area
CORAL_GABLES_NORTH_BOUNDARY=25.75
CORAL_GABLES_SOUTH_BOUNDARY=25.70
CORAL_GABLES_EAST_BOUNDARY=-80.25
CORAL_GABLES_WEST_BOUNDARY=-80.30

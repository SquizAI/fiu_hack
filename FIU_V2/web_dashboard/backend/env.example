# LocalPulse Dashboard - Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control!

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
ENABLE_LOGGING=true
USE_MOCK_DATA=false

# ===========================================
# MAPBOX CONFIGURATION (Required)
# ===========================================
# Get your public access token from: https://account.mapbox.com/access-tokens/
# Note: This is a PUBLIC token, safe to expose to frontend
MAPBOX_PUBLIC_TOKEN=your_mapbox_public_token_here

# ===========================================
# AI/LLM API KEYS (Optional but Recommended)
# ===========================================
# Google Gemini API Key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# WEATHER API (Optional)
# ===========================================
# OpenWeather API Key
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ===========================================
# SOCIAL MEDIA APIs (Optional)
# ===========================================
# Reddit API Credentials
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# ===========================================
# OPTIONAL ENHANCED FEATURES
# ===========================================
# Google Maps API Key (for enhanced location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# SendGrid API Key (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=alerts@localpulse.app

# Twilio Credentials (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Slack Webhook (for team notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,https://your-domain.netlify.app

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100 